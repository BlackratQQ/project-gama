---
interface Props {
  altText: string;
  title: string;
  description: string;
  backgroundImage?: string;
  backgroundSize?: string;
  backgroundPosition?: string;
  className?: string;
}

const {
  title,
  description,
  backgroundImage,
  backgroundSize = 'cover',
  backgroundPosition = 'center',
} = Astro.props;
---

<div
  class="relative flex min-h-[288px] w-full flex-col items-center justify-center gap-4 rounded-3xl border border-white/20 bg-black/30 p-6 text-center shadow-lg backdrop-blur-sm md:max-w-[400px]"
  style="background-image: linear-gradient(225deg, #ffffff66, #fff0 10%); border-radius: 1rem;"
>
  {
    backgroundImage && (
      <div
        class="absolute inset-0 rounded-3xl opacity-100 z-[1]"
        style={`
        background-image: url(${backgroundImage});
        background-position: ${backgroundPosition};
        background-repeat: no-repeat;
        background-size: ${backgroundSize};
        filter: invert(53%) sepia(92%) saturate(2532%) hue-rotate(352deg) brightness(100%) contrast(96%);
      `}
      />
    )
  }

  <!-- Obsah karty -->
  <div class="relative z-10 mb-10 flex flex-col items-center">
    <h2 class="text-balance text-2xl font-bold text-white" style="text-shadow: 0 1px 3px rgb(0 0 0);">{title}</h2>
    <p class="mt-3 text-sm text-gray-100 sm:text-base" style="text-shadow: 0 1px 3px rgb(0 0 0);">{description}</p>
  </div>
</div>
