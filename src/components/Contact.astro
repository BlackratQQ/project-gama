---
import Form from './form/Form.astro';
import BlurText from './react/shared/BlurText.tsx';
import FadeContent from './react/shared/FadeContent.tsx';
---

<div id="kontaktni-formular" class="bg-gradient">
  <div class="container mx-auto flex min-h-screen flex-col items-center justify-center px-3">
    <!-- Nadpis -->
    <div class="mb-6">
      <h3 class="mb-8 text-center text-5xl font-bold text-white md:text-8xl xl:text-9xl">
        <!-- Statický fallback pro SEO/crawlery -->
        <noscript>OZVĚTE SE MI</noscript>
        <!-- Animovaná verze -->
        <BlurText
          text="OZVĚTE SE MI"
          delay={300}
          initialDelay={0}
          animateBy="words"
          direction="top"
          animateOn="view"
          className=""
          client:only="react"
        />
      </h3>
      <h2 class="-mt-5 text-center text-3xl font-bold text-white md:text-4xl">
        První kolo je oťukávací
      </h2>
    </div>

    <!-- Kontaktní informace -->
    <div class="mb-6 max-w-2xl text-white">
      <div class="text-center">
        <FadeContent
          blur={false}
          duration={800}
          delay={400}
          direction="top"
          className=""
          client:only="react"
        >
          <p>
            Pošlete mi zprávu přes formulář, napište na
            <a
              href="mailto:info@vojtechkochta.cz"
              class="font-bold text-orange-500 hover:underline"
            >
              info@vojtechkochta.cz
            </a> nebo zavolejte na
            <a href="tel:+420774960708" class="font-bold text-orange-500 hover:underline">
              +420 774 960 708
            </a>. Obratem vás kontaktuji a domluvíme se na úvodní bezplatné schůzce.
          </p>
        </FadeContent>
      </div>
    </div>

    <!-- Formulář -->
    <div class="container max-w-xl rounded-md shadow-lg">
      <Form />
    </div>
  </div>
</div>

<style>
  #kontaktni-formular {
    /* Aktivovat pouze 3 radiální gradienty */
    --g1-active: 1;
    --g2-active: 1;
    --g3-active: 1;
    --g4-active: 0;
    --linear-active: 0;

    /* Hodnoty pro původní gradient-form */
    --g1-x: 14%;
    --g1-y: 42%;
    --g1-color: #002853;
    --g1-size: 1%;
    --g1-fade: min(7%, 185px);

    --g2-x: 70%;
    --g2-y: 30%;
    --g2-color: #2b0053;
    --g2-size: 0%;
    --g2-fade: min(10%, 220px);

    --g3-x: 88%;
    --g3-y: 77%;
    --g3-color: #002853;
    --g3-size: 0%;
    --g3-fade: min(9%, 110px);
  }
</style>