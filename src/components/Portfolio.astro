---
import PortfolioContainer from './react/portfolio/PortfolioContainer';
import DotGrid from './react/shared/DotGrid';
import BlurText from './react/shared/BlurText.tsx';

const portfolioItems = [
  {
    image: '/images/portfolio/Wako_Mockups.webp',
    glowImage: '/images/portfolio/Wako_Mockups_Glow.webp',
    alt: 'mockup položka 1',
  },
  {
    image: '/images/portfolio/Tora_Mockups.webp',
    glowImage: '/images/portfolio/Tora_Mockups_Glow.webp',
    alt: 'mockup položka 2',
  },
  {
    image: '/images/portfolio/Fenster_Mockups.webp',
    glowImage: '/images/portfolio/Fenster_Mockups_Glow.webp',
    alt: 'mockup položka 3',
  },
  {
    image: '/images/portfolio/Lumissio_Mockups.webp',
    glowImage: '/images/portfolio/Lumissio_Mockups_Glow.webp',
    alt: 'mockup položka 4',
  },
  {
    image: '/images/portfolio/IronFighters_Mockups.webp',
    glowImage: '/images/portfolio/IronFighters_Mockups_Glow.webp',
    alt: 'Iron Fighters - Sportovní klub pro bojové sporty',
  },
];
---

<div id="portfolio" class="relative w-full py-16">
  <!-- DotGrid pozadí -->
  <div class="absolute inset-0 z-0">
    <DotGrid client:visible preset="portfolio" height="100%" />
  </div>

  <!-- Obsah portfolia -->
  <div class="relative z-10 container mx-auto px-4">
    <p
      class="relative select-none text-balance text-center text-5xl font-bold text-white md:text-8xl xl:text-9xl mx-auto w-fit"
    >
      <!-- Statický fallback pro SEO/crawlery -->
      <noscript>
        <span class="strikethrough2">MOJE PRÁCE</span>
      </noscript>
      <!-- Animovaná verze -->
      <BlurText
        text="MOJE PRÁCE"
        delay={300}
        initialDelay={0}
        animateBy="words"
        direction="top"
        animateOn="view"
        className="strikethrough2"
        client:only="react"
      />
    </p>
    <PortfolioContainer items={portfolioItems} client:visible />
  </div>
</div>

<style is:global>
  @keyframes portfolioFadeIn {
    from {
      opacity: 0;
      transform: translateY(-30px);
      filter: blur(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
      filter: blur(0px);
    }
  }
</style>
