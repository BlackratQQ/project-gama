---
import Logo from './Logo.astro';
import Menu from './Menu.astro';
import NavbarContainer from '../react/navbar/NavbarContainer';
---

<nav id="navbar" class="fixed top-0 z-40 w-full transition-all duration-300">
  <div class="container mx-auto flex h-16 items-center justify-between px-4">
    <Logo />

    <!-- Desktop menu -->
    <div class="hidden lg:block">
      <Menu />
    </div>

    <!-- React components container (includes mobile menu, split modal, scroll effects) -->
    <NavbarContainer client:load />
  </div>
</nav>

<style>
  .navbar-scrolled {
    @apply backdrop-blur-md bg-black/50;
  }
</style>
