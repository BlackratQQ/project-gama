---
import AnimatedLogo from '../react/navbar/AnimatedLogo';
---

<AnimatedLogo client:idle />

<style>
  .logo-pulse:hover {
    animation: pulse-scale 1.5s ease-in-out infinite;
  }

  @keyframes pulse-scale {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }
</style>
